@page
@model ProductsAppRP.Pages.LoginModel
@{
}
<div class="container">
    <form name="f1" method="post">
        <div class="form-group row">
            <div class="col-md-6">
                <label for="txtNM" class="col-md-2">Username</label>
                <input type="text" class="form-control col-md-3" asp-for="UserLogin.username" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-6">
                <label for="txtPW" class="col-md-2">Password</label>
                <input type="password" class="form-control col-md-3" asp-for="UserLogin.password" />
            </div>
        </div>
        <button type="submit" class="btn btn-success">Login</button>
    </form>
</div>
<div>
    @Model.Msg
</div>